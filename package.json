{
  "name": "se-2",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "opencode": "PATH=\"$HOME/.bun/bin:$PATH\" opencode web --hostname 0.0.0.0 --port 4096",
    "opencode:debug": "PATH=\"$HOME/.bun/bin:$PATH\" opencode web --hostname 0.0.0.0 --port 4096 --print-logs --log-level DEBUG",
    "opencode:proxy": "node opencode-proxy.js",
    "dev": "yarn workspace @se-2/nextjs dev",
    "build": "yarn next:build",
    "snchain": "yarn workspace @ss-2/snfoundry chain",
    "sndeploy": "yarn workspace @ss-2/snfoundry deploy",
    "sndeploy:clear": "yarn workspace @ss-2/snfoundry deploy:clear",
    "sndeploy:no-reset": "yarn workspace @ss-2/snfoundry deploy --no-reset",
    "sntest": "yarn workspace @ss-2/snfoundry test",
    "sncompile": "yarn workspace @ss-2/snfoundry compile",
    "account": "yarn hardhat:account",
    "account:generate": "yarn workspace @se-2/hardhat account:generate",
    "account:import": "yarn workspace @se-2/hardhat account:import",
    "chain": "yarn hardhat:chain",
    "compile": "yarn hardhat:compile",
    "deploy": "yarn hardhat:deploy",
    "fork": "yarn hardhat:fork",
    "format": "yarn next:format && yarn hardhat:format",
    "generate": "yarn account:generate",
    "hardhat:account": "yarn workspace @se-2/hardhat account",
    "hardhat:chain": "yarn workspace @se-2/hardhat chain",
    "hardhat:check-types": "yarn workspace @se-2/hardhat check-types",
    "hardhat:compile": "yarn workspace @se-2/hardhat compile",
    "hardhat:deploy": "yarn workspace @se-2/hardhat deploy",
    "hardhat:flatten": "yarn workspace @se-2/hardhat flatten",
    "hardhat:fork": "yarn workspace @se-2/hardhat fork",
    "hardhat:format": "yarn workspace @se-2/hardhat format",
    "hardhat:generate": "yarn workspace @se-2/hardhat generate",
    "hardhat:hardhat-verify": "yarn workspace @se-2/hardhat hardhat-verify",
    "hardhat:lint": "yarn workspace @se-2/hardhat lint",
    "hardhat:lint-staged": "yarn workspace @se-2/hardhat lint-staged",
    "hardhat:test": "yarn workspace @se-2/hardhat test",
    "hardhat:verify": "yarn workspace @se-2/hardhat verify",
    "postinstall": "husky install",
    "lint": "yarn next:lint && yarn hardhat:lint",
    "next:build": "yarn workspace @se-2/nextjs build",
    "next:check-types": "yarn workspace @se-2/nextjs check-types",
    "next:format": "yarn workspace @se-2/nextjs format",
    "next:lint": "yarn workspace @se-2/nextjs lint",
    "next:serve": "yarn workspace @se-2/nextjs serve",
    "precommit": "lint-staged",
    "start": "yarn workspace @se-2/nextjs dev",
    "test": "yarn hardhat:test",
    "vercel": "yarn workspace @se-2/nextjs vercel",
    "vercel:login": "yarn workspace @se-2/nextjs vercel:login",
    "vercel:yolo": "yarn workspace @se-2/nextjs vercel:yolo",
    "verify": "yarn hardhat:verify",
    "quality": "./scripts/quality-check.sh",
    "quality:fix": "./scripts/quality-check.sh --fix",
    "quality:report": "./scripts/quality-check.sh --report",
    "quality:duplicates": "jscpd packages/nextjs/components --reporters console",
    "quality:circular": "echo 'Circular dependency check disabled - dpdm-fast has path issues with yarn workspaces'",
    "quality:unused": "knip --no-exit-code",
    "quality:complexity": "yarn next:lint --format stylish 2>&1 | grep -E '(sonarjs|complexity)' || echo 'No complexity issues'",
    "agent:preflight": "./scripts/agent-preflight.sh",
    "agent:postflight": "./scripts/agent-postflight.sh",
    "agent:postflight:strict": "./scripts/agent-postflight.sh --strict",
    "oxlint": "oxlint packages/nextjs --quiet",
    "oxlint:file": "oxlint --quiet",
    "storybook": "yarn workspace @se-2/nextjs storybook"
  },
  "devDependencies": {
    "dependency-cruiser": "^17.3.6",
    "husky": "~8.0.3",
    "jscpd": "^4.0.5",
    "knip": "^5.80.2",
    "lint-staged": "~13.2.2",
    "oxlint": "^1.38.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "yarn@3.2.3",
  "engines": {
    "node": ">=18.18.0"
  },
  "overrides": {
    "chalk": "5.3.0",
    "strip-ansi": "7.1.0",
    "color-convert": "2.0.1",
    "color-name": "1.1.4",
    "is-core-module": "2.13.1",
    "error-ex": "1.3.2",
    "has-ansi": "5.0.1"
  },
  "resolutions": {
    "eslint-config-prettier": "0.0.0",
    "react": "~18.3.1",
    "react-dom": "~18.3.1"
  }
}
